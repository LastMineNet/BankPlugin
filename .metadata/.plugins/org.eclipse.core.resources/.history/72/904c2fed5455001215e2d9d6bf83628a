			if(PlayerInteract.AmoutListIn.contains(e.getPlayer().getName())){
				if(UserAmount.containsKey(e.getPlayer().getName())){
					
				}
			}
		} else {
			e.getPlayer().sendMessage("§8[§3BankPlugin§8] §4Du hast keine Permission für diese Aktion");
		}
	}
}
